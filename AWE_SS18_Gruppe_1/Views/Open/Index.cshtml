@model IEnumerable<AWE_SS18_Gruppe_1.Models.Thesis>

@{
    ViewBag.Title = "Index";
}

<h2>Übersicht über freie und reservierte Thesen</h2>

<p>
    @Html.ActionLink("Neue Thesis anlegen", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Programme.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.LastName) 
            
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Bachelor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Master)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastModified)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Programme.Name)
        </td>
        <td>
            <a href="mailto:@Html.ValueFor(modelItem => item.User.UserName)">@Html.DisplayFor(modelItem => item.User.LastName)</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Bachelor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Master)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            <a href="mailto:@Html.ValueFor(modelItem => item.StudentEmail)">@Html.DisplayFor(modelItem => item.StudentName)</a>
            
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastModified)
        </td>
      
        <td>
            @Html.ActionLink("Bearbeiten", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Löschen", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
