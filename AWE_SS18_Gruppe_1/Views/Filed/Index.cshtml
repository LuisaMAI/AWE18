@model IEnumerable<AWE_SS18_Gruppe_1.Models.Thesis>

@{
    ViewBag.Title = "Index";
}

<h2>Übersicht über die abgegebenen Thesen</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Programme.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.StudentName)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Filing)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Typ)
        </th>
        
        
        <th>
            @Html.DisplayNameFor(model => model.LastModified)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Programme.Name)
        </td>
        <td>
            <a href="mailto:@Html.ValueFor(modelItem => item.User.UserName)">@Html.DisplayFor(modelItem => item.User.LastName)</a>
</td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
       
        <td>
            <a href="mailto:@Html.ValueFor(modelItem => item.StudentEmail)">@Html.DisplayFor(modelItem => item.StudentName)</a>
</td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Filing)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Typ)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.LastModified)
        </td>
        <td>
            @Html.ActionLink("bearbeiten", "Edit", new { id=item.Id }) 
           
        </td>
    </tr>
}

</table>
